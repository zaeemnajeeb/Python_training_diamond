{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            // integrated terminal works well for I/O but VSCode prints a long prompt before program starts
            "console": "integratedTerminal",
            // internal console will output data to debug console, but won't accept any input
            //"console": "internalConsole",
            "stopOnEntry": true,
            "justMyCode": true,
            "preLaunchTask": "Clear terminal"
        }
    ]
}